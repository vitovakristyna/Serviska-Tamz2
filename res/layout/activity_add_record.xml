<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manageRecordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="38dp">

        <TextView
            android:id="@+id/txtdeviceNameL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device name:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/txtDeviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txtDeviceTypeL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device type..."
            android:textSize="14sp" />

        <EditText
            android:id="@+id/txtDeviceType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txtDeviceInfoL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device info..."
            android:textSize="14sp" />

        <EditText
            android:id="@+id/txtDeviceInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txtDeviceErrorL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device error.."
            android:textSize="14sp" />

        <EditText
            android:id="@+id/txtDeviceError"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txtPersonNameL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Person name..."
            android:textSize="14sp" />

        <EditText
            android:id="@+id/txtPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txtPersonContactL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Person contact..."
            android:textSize="14sp" />

        <EditText
            android:id="@+id/txtPersonContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txtPersonInfoL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Person info..."
            android:textSize="14sp" />

        <EditText
            android:id="@+id/txtPersonInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="91dp"
                android:layout_height="85dp"
                app:srcCompat="@android:drawable/btn_dialog" />

            <ImageButton
                android:id="@+id/btnOK"
                android:layout_width="91dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_menu_send" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>